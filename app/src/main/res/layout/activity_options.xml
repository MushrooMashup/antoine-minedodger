<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/optionsTitre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="24sp" />

    <TextView
        android:text="@string/optionsPartieSon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optionsPartieSon" />

    <CheckBox
        android:text="@string/optionsSonJoueur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sonJoueur"
        android:checked="true"
        android:focusable="false" />

    <CheckBox
        android:text="@string/optionsSonExplosion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sonExplosion"
        android:checked="true"
        android:focusable="false" />

    <CheckBox
        android:text="@string/optionsSonLvlUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:id="@+id/sonLvlUp" />

    <CheckBox
        android:text="@string/optionsSonMusique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sonMusique"
        android:checked="true" />

    <TextView
        android:text="@string/optionsPartieLangue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/langue" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>